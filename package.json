{
  "name": "vue-toggle-theme",
  "version": "1.0.2",
  "description": "A Vue 3 component that adds a dark mode. Allows you to switch color schemes using the user's color scheme or by setting a predefined one, and save the selected theme to localStorage.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/vue-toggle-theme.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/vue-toggle-theme/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vue-toggle-theme.umd.cjs",
  "module": "./dist/vue-toggle-theme.js",
  "exports": {
    ".": {
      "import": "./dist/vue-toggle-theme.js",
      "require": "./dist/vue-toggle-theme.umd.cjs"
    }
  },
  "exclude": [
    "src/App.vue",
    "src/main.js"
  ],
  "scripts": {
    "build": "vite build"
  },
  "dependencies": {},
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "vite": "^4.4.9",
    "vue": "^3.3.4"
  },
  "keywords": [
    "vue",
    "dark mode",
    "light",
    "theme",
    "toggle",
    "switch",
    "mode",
    "change",
    "color",
    "sfc",
    "vue 3",
    "localStorage",
    "schemes",
    "component"
  ]
}